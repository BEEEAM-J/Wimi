<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="40dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/lg_TvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/lg_EdtId"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint=" 아이디 입력"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/lg_TvId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/lg_TvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/lg_EdtId"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/lg_EdtPassword"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint=" 비밀번호 입력"
        android:textSize="15dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/lg_TvPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lg_CheckLogin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="로그인"
        style="@style/finpo_main_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>